  .channel-link a:hover {
    color: #ffcc33;
  }
  .channel-description,
  .channel-intro,
  .why-us,
  .contact-us {
    font-size: 19px;
    line-height: 1.75;
    text-align: justify;
    margin-bottom: 40px;
    color: #ddd;
  }
  .features {
    background: rgba(255, 255, 255, 0.07);
    padding: 25px 30px;
    border-radius: 12px;
    line-height: 1.65;
    margin-bottom: 40px;
  }
  .features h2,
  .channel-intro h2,
  .why-us h2,
  .contact-us h2 {
    color: #f39c12;
    margin-bottom: 22px;
    font-weight: 700;
    font-size: 26px;
  }
  .features ul,
  .channel-intro ul,
  .why-us ul {
    list-style: inside disc;
    padding-right: 15px;
    color: #eee;
    font-size: 18px;
