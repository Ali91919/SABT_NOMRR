    background: rgba(34, 34, 34, 0.9);
    border-radius: 18px;
    padding: 35px 45px;
    box-shadow: 0 0 35px #f39c12;
    backdrop-filter: blur(10px);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
  }
  .container:hover {
    box-shadow: 0 0 60px #ffbb33;
    transform: scale(1.05);
  }
  .title {
    font-size: 75px;
    font-weight: 900;
    text-align: center;
    color: #f39c12;
    margin-bottom: 40px;
    letter-spacing: 14px;
    user-select: none;
  }
  .pinned-profile {
    text-align: center;
    margin-bottom: 35px;
  }
  .pinned-profile img {
    width: 160px;
    border-radius: 50%;
    border: 3px solid #f39c12;
    box-shadow: 0 0 22px #f39c12;
  }
  .pinned-profile-text {
    margin-top: 14px;
    font-size: 21px;
    color: #f39c12;
    font-weight: 700;
  }
  .channel-link {
